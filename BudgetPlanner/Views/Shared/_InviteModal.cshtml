@model BudgetPlanner.ViewModels.InviteViewModel



<div>
    @using (Html.BeginForm("Create", "Invitations", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.Hidden("HouseholdId", (int?)Model.HouseholdId)
        @Html.Hidden(Model.House)
        @Html.Hidden(Model.UserFirst)
        @Html.Hidden(Model.UserLast)

    <div class="form-horizontal">
        <h4>Invitation</h4>
        <p>Would you like to invite someone to @Model.House?</p>
        @Html.TextBoxFor(m => m.House, new { @class = "form-control hidden" })
        @Html.TextBoxFor(m => m.UserLast, new { @class = "form-control hidden" })
        @Html.TextBoxFor(m => m.UserFirst, new { @class = "form-control hidden" })
        @Html.TextBoxFor(m => m.SendEmail, new { @class = "form-control hidden" })
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>