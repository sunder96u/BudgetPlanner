@model BudgetPlanner.ViewModels.AddFundsViewModel


@using (Html.BeginForm("AddFunds", "Transactions", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="main">
        <div class="col-md-12">
            <div class="widget stacked">
                <div class="widget-header">
                    <i class="fa fa-1x fa-coins" style="margin-left:.75em;"></i>
                    <h3>Add Funds</h3>
                </div> <!-- /widget-header -->
                <div class="widget-content">
                    <div class="row">
                        <div class="col-md-5 col-sm-offset-1">
                            <h4>Account:</h4>
                            @Html.DropDownList("Accounts", null, new { @class = "form-control" })
                        </div>
                        <div class="col-md-5">
                            <h4>Amount:</h4>
                            <input type="text" class="form-control" placeholder="Enter Amount" id="Amount" name="Amount"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-11 col-sm-offset-1">
                            <h4>Memo:</h4>
                            <input type="text" class="form-control" placeholder="Memo" id="Memo" name="Memo"/>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-5 col-lg-offset-7">
                            <input type="submit" value="Add Funds" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


